.confirm____container
  =render 'shared/login_simple_header'
  .buy-main
    .buy-main__box
      .buy-content
        %h2.buy-content__completed-message_1
          %i.fa.fa-clock
          発送をお待ちください
          %h2.buy-content__completed-message_2
            出品者からの発送通知をお待ちください
            %h2.buy-content__header
              購入が完了しました
        .buy-content__product
          .buy-content__product__inner
            .buy-product-main
              .buy-product-image
                = image_tag @image.image_url, width: "100px"
                %span.buy-product-name
                = @product.name
            %form.buy-form
              %p.buy-price
                ¥ #{converting_to_jpy(@product.price)}
                -if @product.delivery_charge_id == 1
                  %span
                （税込）送料込み
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 配送先
            .user-info-text
              = "〒" + @delivery_info.postal_code.to_s
              %br
              = @delivery_info.prefecture.name + @delivery_info.city + @delivery_info.block_number + @delivery_info.building_name
              %br
              = @delivery_info.l_name + " " + @delivery_info.f_name
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 支払方法
            .user-info-text
              **** **** **** #{@default_card_information.last4}
              %br
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,2)
              = exp_month + " / " + exp_year
            .user-info-fix
  =render 'shared/login_footer'